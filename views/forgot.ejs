    <div class="customer-login">
        <div class="container">
            <div class="row">
                <!--register area start-->
                <div class="col-lg-8 col-md-6" style="margin-bottom:100px">
                    <div class="account_form register" data-aos="fade-up" data-aos-delay="200">
                        <h3>Quên mật khẩu</h3>
                        <form id="register-form" data="send-otp">
                            <p style="color:red" id="mes-register"></p>
                            <p id="countdown"></p>
                            <p style="color:green" id="mes-register-true"></p>
                            <div class="default-form-box" id="emailField">
                                <label>Địa chỉ email <span>*</span></label>
                                <input type="text" name="email">
                            </div>
                            <div class="default-form-box" hidden id="passwordField">
                                <label>Mật khẩu mới<span>*</span></label>
                                <input type="password" name="password">
                            </div>
                            <div class="default-form-box" hidden id="otpField">
                                <label>Mã OTP<span>*</span></label>
                                <input type="text" name="otp">
                            </div>
                            <div class="login_submit">
                                <button style="background-color: aqua;" class="btn btn-md btn-black-default-hover" id="btn-register" type="submit">Lấy OTP</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <script>
            const btnRegister = document.querySelector("#btn-register");
            const registerForm = document.querySelector("#register-form");

            let emailField = registerForm.querySelector("#emailField");
            let passwordField = registerForm.querySelector("#passwordField");
            let otpField = registerForm.querySelector("#otpField");

            let userEmail;

            btnRegister.addEventListener("click", function(e) {
                e.preventDefault();

                if (registerForm.getAttribute("data") == "send-otp") {
                    let email = registerForm.querySelector("input[name='email']").value;

                    let data = {
                        email
                    }

                    document.querySelector("#mes-register").innerText = '';
                    document.querySelector("#mes-register-true").innerText = '';

                    let urlApi = "http://localhost:3000/authen/sendOTP";
                    fetch(urlApi, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        })
                        .then(res => res.json())
                        .then(data => {
                            console.log(data);
                            if (!data.type) {
                                document.querySelector("#mes-register").innerText = data.msg;
                            } else {
                                userEmail = data.data.email;
                                document.querySelector("#mes-register-true").innerText = data.msg;
                                registerForm.setAttribute("data", "reset-password");
                                passwordField.removeAttribute("hidden");
                                otpField.removeAttribute("hidden");
                                emailField.setAttribute("hidden", true);
                                btnRegister.innerText = "Lưu thay đổi"
                            }
                        });
                }
                if (registerForm.getAttribute("data") == "reset-password") {

                    let email = registerForm.querySelector("input[name='email']").value;
                    let password = registerForm.querySelector("input[name='password']").value;
                    let otp = registerForm.querySelector("input[name='otp']").value;

                    let data = {
                        email: userEmail,
                        password,
                        otp
                    }
                    console.log(data);

                    document.querySelector("#mes-register").innerText = '';
                    document.querySelector("#mes-register-true").innerText = '';

                    let urlApi = "http://localhost:3000/authen/resetpassword";
                    fetch(urlApi, {
                            method: 'PUT',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        })
                        .then(res => res.json())
                        .then(data => {
                            console.log(data);
                            if (!data.type) {
                                document.querySelector("#mes-register").innerText = data.msg;
                            } else {
                                document.querySelector("#mes-register-true").innerText = data.msg;
                                document.querySelector("#countdown").innerText = "Sẽ trở về trang đăng nhập trong 3";

                                let counter = 3;
                                let countDownFunction = new Promise((resolve, reject) => {
                                    setTimeout(function() {
                                        counter--;
                                        resolve(counter);
                                    }, 1000)
                                })

